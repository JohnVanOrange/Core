{% extends "base.twig" %}

{% block content %}
 <tr><td>There was a password reset request sent from {{ theme.site_name }} for user {{ username }}.</td></tr>
 
 <tr height="35px"><td>
  <a href="{{ theme.web_root }}changepw?resetkey={{ reset_key }}" style="
   padding: 10px 16px;
   font-size: 18px;
   line-height: 1.33;
   border-radius: 6px;
   background-color: {{ theme.button_color }};
   border-color: {{ theme.button_border }};
   color: {{ theme.button_text }};
   text-decoration: none;
  ">
   Click here to change password
  </a>
 </td></tr>
 
 <tr><td>If link does not work, copy and paste this into your browser:<br>
 <a style="color: {{ theme.text_color }}" href="{{ theme.web_root }}changepw?resetkey={{ reset_key }}">{{ theme.web_root }}changepw?resetkey={{ reset_key }}</a></td></tr>
 
 <tr><td>If you did not request this password to be reset, you may feel free to ignore this email.</td></tr>
{% endblock %}